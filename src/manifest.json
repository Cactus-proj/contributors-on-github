{
  "name": "Contributor Stats on Github",
  "description": "Show Github Contributor Stats",
  "homepage_url": "https://github.com/hzoo/contributor-stats-on-github",
  "version": "0.0.1",
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "icons": {
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2,
  "minimum_chrome_version": "49",
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "storage.js",
        "index.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
