{
  "name": "Github Contributor Stats",
  "description": "Show Github Contributor Stats",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "icons": {
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2,
  "minimum_chrome_version": "49",
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "storage.js",
        "index.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
